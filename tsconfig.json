{
  "compilerOptions": {
    "outDir": "build/js",
    "target": "es5",
    "skipLibCheck": true,
    "rootDir": "src",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "jsx": "React",
    "pretty": true
  },
  "exclude": ["node_modules", "build", "webpack.config.js"]
}
